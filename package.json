{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "A simple image processing api created as a project for Udacity Advanced full-stack development track",
  "main": "index.js",
  "scripts": {
    "test": "yarn clean && yarn copy && npx tsc && jasmine",
    "start:dev": "nodemon --watch \"./src/index.ts\" --exec \"npx ts-node src/index.ts\"",
    "clean": "rimraf build/",
    "build": "yarn clean && yarn copy && npx tsc",
    "start:prod": "npm run build && nodemon build/index.js",
    "copy": "copyfiles -f src/views/* build/views && copyfiles -f src/images/*.jpg build/images",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/jasmine": "^3.10.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.14",
    "@types/sharp": "^0.29.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^3.10.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
